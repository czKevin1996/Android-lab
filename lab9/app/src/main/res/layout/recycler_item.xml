<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#83AF9B"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AniviaKid"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/id_or_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id:31848851"
            android:layout_alignLeft="@id/name"
            android:layout_marginTop="29dp"
            />
        <TextView
            android:id="@+id/blog_or_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blog:https://github.com/AniviaKid"
            android:layout_alignLeft="@id/id_or_language"
            android:layout_marginTop="48dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>